generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
  READ_ONLY
}

model User {
  id                    String        @id @default(uuid())
  email                 String        @unique
  passwordHash          String
  role                  Role          @default(MEMBER)
  isVerified            Boolean       @default(false)
  verificationToken     String?
  passwordResetToken    String?
  passwordResetExpires  DateTime?
  createdAt             DateTime      @default(now())
  githubId              String?       @unique
  googleId              String?       @unique
  mfaEnabled            Boolean       @default(false)
  mfaSecret             String?
  mfaRecoveryCodes      String[]      @default([])
  organizationId        String?
  organization          Organization? @relation(fields: [organizationId], references: [id])
  sessions              Session[]
  apiKeys               ApiKey[]

  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  ip        String?
  userAgent String?
  isValid   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

model Organization {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  users     User[]
  projects  Project[]

  @@map("organizations")
}

model Project {
  id             String               @id @default(uuid())
  name           String
  organizationId String
  organization   Organization         @relation(fields: [organizationId], references: [id])
  connections    DatabaseConnection[]
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  @@map("projects")
}

enum DatabaseType {
  POSTGRESQL
  MYSQL
  MONGODB
}

model DatabaseConnection {
  id           String       @id @default(uuid())
  name         String
  type         DatabaseType
  host         String
  port         Int
  databaseName String
  username     String
  password     String // Encrypted
  projectId    String
  project      Project      @relation(fields: [projectId], references: [id])
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  schedules    BackupSchedule[]
  snapshots    BackupSnapshot[]

  @@map("database_connections")
}

model ApiKey {
  id         String    @id @default(uuid())
  name       String
  key        String    @unique
  prefix     String
  scopes     Json      @default("[]")
  lastUsedAt DateTime?
  expiresAt  DateTime?
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("api_keys")
}


enum SnapshotStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  PURGED
}

model BackupSchedule {
  id             String               @id @default(uuid())
  name           String
  cron           String
  retentionDays  Int?
  retentionCount Int?
  isActive       Boolean              @default(true)
  connectionId   String
  connection     DatabaseConnection   @relation(fields: [connectionId], references: [id])
  snapshots      BackupSnapshot[]
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  @@map("backup_schedules")
}

model BackupSnapshot {
  id           String         @id @default(uuid())
  status       SnapshotStatus @default(PENDING)
  storagePath  String?
  sizeBytes    BigInt?
  startedAt    DateTime?
  completedAt  DateTime?
  errorMessage String?
  scheduleId   String?
  schedule     BackupSchedule? @relation(fields: [scheduleId], references: [id])
  connectionId String
  connection   DatabaseConnection @relation(fields: [connectionId], references: [id])
  createdAt    DateTime       @default(now())

  @@map("backup_snapshots")
}
